---
const { domains, category } = Astro.props;
---

<div class="flex gap-2 p-2 overflow-x-scroll items-start">
  {
    domains.map((domain) => {
      return (
        <a
          class="border rounded px-1 py-1 text-nowrap hover:scale-[1.1] transition-all"
          href={`#${domain}`}
        >
          {domain}
        </a>
      );
    })
  }
</div>
